			<label class="control-label col-md-2">@Html.DisplayNameFor(model => model.ReceiptDate)</label>
			<div class="col-md-10">
				@Html.EditorFor(model => model.ReceiptDate, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.ReceiptDate, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			<label class="control-label col-md-2">@Html.DisplayNameFor(model => model.Order)</label>
			<div class="col-md-10">
