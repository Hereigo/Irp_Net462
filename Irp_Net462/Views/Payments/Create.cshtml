				@Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			<label class="control-label col-md-2">@Html.DisplayNameFor(model => model.CurrentTarif)</label>
			<div class="col-md-10">
				@Html.EditorFor(model => model.CurrentTarif, new { htmlAttributes = new { @class = "form-control" } })
				<span>123.45 - correct format</span>
