		<div class="form-group">
			<label class="control-label col-md-2">@Html.DisplayNameFor(model => model.PaymentPeriod)</label>
			<div class="col-md-10">
				@Html.EditorFor(model => model.PaymentPeriod, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.PaymentPeriod, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			<label class="control-label col-md-2">@Html.DisplayNameFor(model => model.CounterPrev)</label>
