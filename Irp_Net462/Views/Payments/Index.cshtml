@model IEnumerable<Irp_Net462.Models.Payment>

@{
    ViewBag.Title = "Index";
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
	<tr>
		<th>
			Period
		</th>
		<th>
			Destination
		</th>
		<th>
			C.1
		</th>
		<th>
			C.2
		</th>
		<th>
			Amount
		</th>
		<th>
			Tarif
		</th>
		<th>
			Order date
		</th>
		<th>
			Receipt date
		</th>
		<th></th>
	</tr>

@foreach (var item in Model) {
	<tr>
		<td>
			@item.PaymentPeriod.ToString("yyyy-MM")
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.PaymentCategory.Name)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.CounterPrev)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.CounterCurrent)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.Amount)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.CurrentTarif)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.OrderDate)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.ReceiptDate)
		</td>
		@*<td>
			@Html.DisplayFor(modelItem => item.Order)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.Receipt)
		</td>*@
		<td>
			@Html.ActionLink("Edit", "Edit", new { id = item.ID })
		</td>
	</tr>
}

</table>
